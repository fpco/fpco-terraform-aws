{
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{ user `aws_access_key` }}",
            "secret_key": "{{ user `aws_secret_key` }}",
            "region": "{{ user `region` }}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "CentOS Linux 7 x86_64 HVM EBS ENA 1901_*",
                    "root-device-type": "ebs"
                },
                "most_recent": true,
                "owners": ["679593333241"]
            },
            "instance_type": "t2.medium",
            "ssh_username": "centos",
            "ami_name": "centos7-server-ami-{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "install-utils.sh",
            "destination": "/home/centos/install-utils.sh"
        },
        {
            "type": "shell",
            "inline": [
                "sudo chmod +x /home/centos/install-utils.sh",
                "sudo /home/centos/install-utils.sh"
            ]
        }
    ],
    "variables": {
        "region": "{{ env `AWS_REGION` }}"
    }
}
